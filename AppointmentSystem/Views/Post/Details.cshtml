@model AppointmentSystem.Models.ViewModel.PostViewModel

@{
    ViewData["Title"] = "Post Details";
}

<h1>Post Details</h1>

<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>@(Model.Status ? "Active" : "Inactive")</td>
    </tr>
</table>

<a href="/Post" class="btn btn-secondary">Back to List</a>
