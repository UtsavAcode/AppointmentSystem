@model AppointmentSystem.Models.ViewModel.PostViewModel

@{
    ViewData["Title"] = "Delete Post";
}

<h1>Delete Post</h1>
<p>Are you sure you want to delete this post?</p>
<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>@(Model.Status ? "Active" : "Inactive")</td>
    </tr>
</table>

<form method="post" asp-action="DeleteConfirmed">
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Post" class="btn btn-secondary">Cancel</a>
</form>
