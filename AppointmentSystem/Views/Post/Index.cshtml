@model IEnumerable<AppointmentSystem.Models.ViewModel.PostViewModel>
@{
    ViewData["Title"] = "Post List";
}
<h1>Posts</h1>
<a href="/Post/Create" class="btn btn-primary mb-3">Create New Post</a>
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            
            <th>Name</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                @* <td>@post.Id</td> *@
                <td>@post.Name</td>
                <td>
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input status-toggle"
                               id="statusSwitch@(post.Id)"
                               data-post-id="@post.Id"
                        @(post.Status ? "checked" : "")>
                        <label class="custom-control-label" for="statusSwitch@(post.Id)">
                            @(post.Status ? "Active" : "Inactive")
                        </label>
                    </div>
                </td>
                <td>
                    <a href="/Post/Details/@post.Id" class="btn btn-info btn-sm">Details</a>
                    <a href="/Post/Edit/@post.Id" class="btn btn-warning btn-sm">Edit</a>
                    @* <a href="#" class="btn btn-danger btn-sm delete-btn" *@
                    @*    data-post-id="@post.Id" data-post-name="@post.Name"> *@
                    @*     Delete *@
                    @* </a> *@
                </td>
            </tr>
        }
    </tbody>
</table>


