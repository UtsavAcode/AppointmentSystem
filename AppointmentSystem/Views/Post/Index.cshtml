@section Scripts {
    <script>
        $(document).ready(function() {
            $('.status-toggle').change(function() {
                var postId = $(this).data('post-id');
                var isActive = $(this).is(':checked');

                $.ajax({
                    url: '/Post/ToggleStatus',
                    type: 'POST',
                    data: {
                        id: postId,
                        status: isActive
                    },
                    success: function(response) {
                        // Update label text dynamically
                        var label = $(`label[for="statusSwitch${postId}"]`);
                        label.text(isActive ? 'Active' : 'Inactive');
                    },
                    error: function() {
                        // Revert switch if ajax fails
                        $(this).prop('checked', !isActive);
                        alert('Failed to update status');
                    }
                });
            });
        });

         $('.delete-btn').click(function (e) {
            e.preventDefault();

            // Get the post ID and Name from data attributes
            var postId = $(this).data('post-id');
            var postName = $(this).data('post-name');
            var postStatus = $(this).closest('tr').find('td:eq(2)').text(); // Status from the row

            // Set the modal fields
            $('#postId').text(postId);
            $('#postName').text(postName);
            $('#postStatus').text(postStatus);
            $('#deletePostId').val(postId);

            // Show the modal
            $('#deleteModal').modal('show');
        });
    </script>
